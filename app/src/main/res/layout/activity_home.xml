<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="zip.moodio.HomeActivity">

    <ImageView
        android:id="@+id/homeScreenPicture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/p_meadow"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/logButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log"
        android:layout_alignTop="@+id/dataButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goToLogScreen" />
    <Button
        android:id="@+id/dataButton"
        android:text="Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/logButton"
        android:layout_toEndOf="@+id/logButton"
        android:onClick="goToGraphScreen" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/dataButton"
        android:layout_toEndOf="@+id/dataButton"
        android:onClick="goToHelpScreen" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/helpButton"
        android:layout_toEndOf="@+id/helpButton"
        android:onClick="goToSettingsScreen"/>

</RelativeLayout>